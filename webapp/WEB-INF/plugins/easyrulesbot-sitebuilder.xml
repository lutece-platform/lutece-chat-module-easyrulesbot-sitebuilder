<?xml version="1.0" encoding="UTF-8"?>
<plug-in>
    <name>easyrulesbot-sitebuilder</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>0.9.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>module.easyrulesbot.sitebuilder.plugin.description</description>
    <provider>module.easyrulesbot.sitebuilder.plugin.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/easyrulesbot/easyrulesbot.png</icon-url>
    <copyright>Copyright (c) 2016 City of Paris</copyright>
    <db-pool-required>1</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>4.1.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <!-- servlets -->
     <servlets>
          <servlet>
               <servlet-name>sitebuilder</servlet-name>
               <url-pattern>/servlet/plugins/easyrulesbot/modules/sitebuilder/pom</url-pattern>
               <servlet-class>fr.paris.lutece.plugins.easyrulesbot.modules.sitebuilder.web.PomServlet</servlet-class>
          </servlet>
     </servlets>

</plug-in>