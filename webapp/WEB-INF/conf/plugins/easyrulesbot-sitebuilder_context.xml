<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" >


    <!-- #############        Default response processors        ###########-->
    <bean id="easyrulesbot.processor.inputString" class="fr.paris.lutece.plugins.easyrulesbot.service.response.processors.InputStringResponseProcessor" />

    <bean id="easyrulesbot.processor.inputString.email" class="fr.paris.lutece.plugins.easyrulesbot.service.response.processors.InputStringResponseProcessor" >
        <property name="standardPattern" value="email" />
        <property name="patternErrorMessageI18nKey" value="module.easyrulesbot.sitebuilder.message.invalidEmail" />
    </bean>

    <bean id="easyrulesbot.processor.yesNo" class="fr.paris.lutece.plugins.easyrulesbot.service.response.processors.MultipleValuesResponseProcessor" >
        <property name="mutipleValuesMapFile" value="/WEB-INF/plugins/easyrulesbot/yesno.txt" />
        <property name="invalidResponseMessageI18nKey" value="module.easyrulesbot.sitebuilder.processor.yesno.invalidResponse" />
    </bean>
    
    <!-- ################         Filters         ##################### -->
    <bean id="easyrulesbot.filter.profanity" class="fr.paris.lutece.plugins.easyrulesbot.service.response.filters.StopOnWordFilter" >
        <property name="mapLocaleStopWordsFile">
            <map>
                <entry key="fr" value="/WEB-INF/plugins/easyrulesbot/profanity-words_fr.txt" />
            </map>
        </property>
        <property name="mapLocaleResponseMessageFile">
            <map>
                <entry key="fr" value="/WEB-INF/plugins/easyrulesbot/profanity-responses_fr.txt" />
            </map>
        </property>
    </bean>
    
    <bean id="easyrulesbot.filter.thanksful" class="fr.paris.lutece.plugins.easyrulesbot.service.response.filters.StopOnWordFilter" >
        <property name="listStopWords">
            <list>
                <value>merci</value>
            </list>
        </property>
        <property name="mapLocaleResponseMessageFile">
            <map>
                <entry key="fr" value="/WEB-INF/plugins/easyrulesbot/thankful-responses_fr.txt" />
            </map>
        </property>
    </bean>
    
    <bean id="easyrulesbot.filter.laughing" class="fr.paris.lutece.plugins.easyrulesbot.service.response.filters.StopOnWordFilter" >
        <property name="listStopWords">
            <list>
                <value>lol</value>
                <value>mdr</value>
                <value>ptdr</value>
            </list>
        </property>
        <property name="mapLocaleResponseMessageFile">
            <map>
                <entry key="fr" value="/WEB-INF/plugins/easyrulesbot/laughfing-responses_fr.txt" />
            </map>
        </property>
    </bean>
           
    <bean id="easyrulesbot.processor.mylutecemodule" class="fr.paris.lutece.plugins.easyrulesbot.service.response.processors.MultipleValuesResponseProcessor" >
        <property name="mutipleValuesMapFile" value="/WEB-INF/plugins/easyrulesbot/modules/sitebuilder/mylutecemodule.txt" />
        <property name="invalidResponseMessageI18nKey" value="module.easyrulesbot.sitebuilder.processor.mylutecemodule.invalidResponse" />
    </bean>
        
    <!-- ###############       Conditions      ################ -->
    <bean id="easyrulesbot.condition.undefinedDataKey" class="fr.paris.lutece.plugins.easyrulesbot.business.rules.conditions.RuleDataKeyExistsCondition"/>
    <bean id="easyrulesbot.condition.mylutece" class="fr.paris.lutece.plugins.easyrulesbot.business.rules.conditions.DataValueCondition">
        <property name="dataKey" value="mylutece" />
        <property name="dataValue" value="true" />
    </bean>
    <bean id="easyrulesbot.condition.avatar" class="fr.paris.lutece.plugins.easyrulesbot.business.rules.conditions.DataValueCondition">
        <property name="dataKey" value="avatar" />
        <property name="dataValue" value="true" />
    </bean>
    <bean id="easyrulesbot.condition.sendByMail" class="fr.paris.lutece.plugins.easyrulesbot.business.rules.conditions.DataValueCondition">
        <property name="dataKey" value="sendbymail" />
        <property name="dataValue" value="true" />
    </bean>
    
    <!-- #############            Rules           ############## -->
    <bean id="easyrulesbot.rule.greetings" class="fr.paris.lutece.plugins.easyrulesbot.business.rules.BotRule" >
        <property name="name" value="greetings" />
        <property name="priority" value="0" />
        <property name="description" value="Greetings" />
        <property name="questionTemplateI18nKey" value="module.easyrulesbot.sitebuilder.rule.greetings.question" />
        <property name="dataKey" value="user_firstname" />
        <property name="responseProcessor" ref="easyrulesbot.processor.inputString" />
        <property name="listConditions">
            <list>
                <ref bean="easyrulesbot.condition.undefinedDataKey" />
            </list>
        </property>
        <property name="responseCommentTemplateI18nKey" value="module.easyrulesbot.sitebuilder.rule.greetings.responseComment" />
    </bean>

        
    <bean id="easyrulesbot.rule.mylutece" class="fr.paris.lutece.plugins.easyrulesbot.business.rules.BotRule" >
        <property name="name" value="mylutece" />
        <property name="priority" value="10" />
        <property name="description" value="Check for front authentication" />
        <property name="questionTemplateI18nKey" value="module.easyrulesbot.sitebuilder.rule.mylutece.question" />
        <property name="dataKey" value="mylutece" />
        <property name="responseProcessor" ref="easyrulesbot.processor.yesNo" />
        <property name="listConditions">
            <list>
                <ref bean="easyrulesbot.condition.undefinedDataKey" />
            </list>
        </property>
        <property name="responseCommentTemplateI18nKey" value="module.easyrulesbot.sitebuilder.rule.mylutece.responseComment" />
    </bean>
    
    <bean id="easyrulesbot.rule.mylutecemodule" class="fr.paris.lutece.plugins.easyrulesbot.business.rules.BotRule" >
        <property name="name" value="mylutecemodule" />
        <property name="priority" value="11" />
        <property name="description" value="Choose authentication module" />
        <property name="questionTemplateI18nKey" value="module.easyrulesbot.sitebuilder.rule.mylutecemodule.question" />
        <property name="dataKey" value="mylutecemodule" />
        <property name="responseProcessor" ref="easyrulesbot.processor.mylutecemodule" />
        <property name="listConditions">
            <list>
                <ref bean="easyrulesbot.condition.undefinedDataKey" />
                <ref bean="easyrulesbot.condition.mylutece" />
            </list>
        </property>
        <property name="responseCommentTemplateI18nKey" value="module.easyrulesbot.sitebuilder.rule.mylutecemodule.responseComment" />
    </bean>
    
    <bean id="easyrulesbot.rule.avatar" class="fr.paris.lutece.plugins.easyrulesbot.business.rules.BotRule" >
        <property name="name" value="avatar" />
        <property name="priority" value="20" />
        <property name="description" value="Check for Avatar" />
        <property name="questionTemplateI18nKey" value="module.easyrulesbot.sitebuilder.rule.avatar.question" />
        <property name="dataKey" value="avatar" />
        <property name="responseProcessor" ref="easyrulesbot.processor.yesNo" />
        <property name="listConditions">
            <list>
                <ref bean="easyrulesbot.condition.undefinedDataKey" />
            </list>
        </property>
        <property name="responseCommentTemplateI18nKey" value="module.easyrulesbot.sitebuilder.rule.avatar.responseComment" />
    </bean>

    <bean id="easyrulesbot.rule.avatarServer" class="fr.paris.lutece.plugins.easyrulesbot.business.rules.BotRule" >
        <property name="name" value="avatarserver" />
        <property name="priority" value="21" />
        <property name="description" value="Check for Avatar Server" />
        <property name="questionTemplateI18nKey" value="module.easyrulesbot.sitebuilder.rule.avatarserver.question" />
        <property name="dataKey" value="avatarserver" />
        <property name="responseProcessor" ref="easyrulesbot.processor.yesNo" />
        <property name="listConditions">
            <list>
                <ref bean="easyrulesbot.condition.undefinedDataKey" />
                <ref bean="easyrulesbot.condition.avatar" />
            </list>
        </property>
    </bean>
    
    <bean id="easyrulesbot.rule.form" class="fr.paris.lutece.plugins.easyrulesbot.business.rules.BotRule" >
        <property name="name" value="form" />
        <property name="priority" value="30" />
        <property name="description" value="Ask for creating forms" />
        <property name="questionTemplateI18nKey" value="module.easyrulesbot.sitebuilder.rule.form.question" />
        <property name="dataKey" value="form" />
        <property name="responseProcessor" ref="easyrulesbot.processor.yesNo" />
        <property name="listConditions">
            <list>
                <ref bean="easyrulesbot.condition.undefinedDataKey" />
            </list>
        </property>
    </bean>
    
    <bean id="easyrulesbot.rule.sendByMail" class="fr.paris.lutece.plugins.easyrulesbot.business.rules.BotRule" >
        <property name="name" value="sendbymail" />
        <property name="priority" value="90" />
        <property name="description" value="Ask for sending by mail" />
        <property name="questionTemplateI18nKey" value="module.easyrulesbot.sitebuilder.rule.sendbymail.question" />
        <property name="dataKey" value="sendbymail" />
        <property name="responseProcessor" ref="easyrulesbot.processor.yesNo" />
        <property name="listConditions">
            <list>
                <ref bean="easyrulesbot.condition.undefinedDataKey" />
            </list>
        </property>
    </bean>

    <bean id="easyrulesbot.rule.email" class="fr.paris.lutece.plugins.easyrulesbot.business.rules.BotRule" >
        <property name="name" value="email" />
        <property name="priority" value="91" />
        <property name="description" value="Ask for an email" />
        <property name="questionTemplateI18nKey" value="module.easyrulesbot.sitebuilder.rule.email.question" />
        <property name="dataKey" value="user_email" />
        <property name="responseProcessor" ref="easyrulesbot.processor.inputString.email" />
        <property name="listConditions">
            <list>
                <ref bean="easyrulesbot.condition.undefinedDataKey" />
                <ref bean="easyrulesbot.condition.sendByMail" />
            </list>
        </property>
    </bean>
    
    <!-- #############          Rule engine        ############## -->
    <bean id="easyrulesbot.engine.siteBuilder" class="org.easyrules.spring.RulesEngineFactoryBean">
        <property name="skipOnFirstAppliedRule" value="true"/>
        <property name="skipOnFirstFailedRule" value="true"/>
        <property name="priorityThreshold" value="100"/>
        <property name="silentMode" value="false"/>
        <property name="rules">
            <list>
                <ref bean="easyrulesbot.rule.greetings"/>
                <ref bean="easyrulesbot.rule.mylutece"/>
                <ref bean="easyrulesbot.rule.mylutecemodule"/>
                <ref bean="easyrulesbot.rule.avatar"/>
                <ref bean="easyrulesbot.rule.avatarServer"/>
                <ref bean="easyrulesbot.rule.form"/>
                <ref bean="easyrulesbot.rule.sendByMail"/>
                <ref bean="easyrulesbot.rule.email"/>
            </list>
        </property>
        <property name="ruleListeners">
            <list>
            </list>
        </property>
    </bean>
    
    <bean id="easyrulesbot.pombuilder" class="fr.paris.lutece.plugins.easyrulesbot.modules.sitebuilder.service.PomBuilder">
        <property name="mapping">
            <map>
                <entry key="mylutece:true" value="plugin-mylutece" />
                <entry key="mylutecemodule:database" value="module-mylutece-database" />
                <entry key="mylutecemodule:openam" value="module-mylutece-openam" />
                <entry key="mylutecemodule:cas" value="module-mylutece-cas" />
                <entry key="avatar:true" value="plugin-avatar" />
                <entry key="avatarserver:true" value="plugin-avatarserver" />
                <entry key="form:true" value="plugin-form" />
            </map>
        </property>
    </bean>
    
    <!-- ##############        Bot        ##############-->
    <bean id="easyrulesbot.bot.siteBuilder" class="fr.paris.lutece.plugins.easyrulesbot.modules.sitebuilder.business.SiteBuilderBot">
        <property name="key" value="lutecesitebuilder" />
        <property name="nameI18nKey" value="module.easyrulesbot.sitebuilder.bot.lutecesitebuilder.name" />
        <property name="descriptionI18nKey" value="module.easyrulesbot.sitebuilder.bot.lutecesitebuilder.description" />
        <property name="rulesEngine" ref="easyrulesbot.engine.siteBuilder" />
        <property name="listResponseFilters">
            <list>
                <ref bean="easyrulesbot.filter.profanity"/>
                <ref bean="easyrulesbot.filter.thanksful"/>
                <ref bean="easyrulesbot.filter.laughing"/>
            </list>
        </property>
        <property name="listAvailableLanguages">
            <list>
                <value>en</value>
                <value>fr</value>
            </list>
        </property>
        <property name="pomBuilder" ref="easyrulesbot.pombuilder"/>
    </bean>
</beans>
